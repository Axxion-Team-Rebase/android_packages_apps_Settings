<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/about_axxion"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="team"
        android:title="@string/axxion_team">

        <PreferenceScreen android:key="sira"
                android:layout="@layout/sira" />

        <PreferenceScreen android:key="ivan"
                android:layout="@layout/ivan" />
                
        <PreferenceScreen android:key="art"
                android:layout="@layout/art" />
    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="about"
        android:title="@string/about_axxion">

        <!-- Changelog -->
        <PreferenceScreen
            android:key="changelog"
            android:title="@string/changelog_axxion_title"
            android:fragment="com.android.settings.axxion.Changelog" />

        <!-- axxion Share -->
        <Preference
            android:key="share"
            android:title="@string/share_axxion_title"
            android:summary="@string/share_axxion_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="sites"
        android:title="@string/sites_axxion">

        <!-- axxion Github -->
        <Preference
            android:key="axxion_source"
            android:title="@string/axxion_source_title"
            android:summary="@string/axxion_source_summary" />

        <!-- axxion GooglePlus -->
        <Preference
            android:key="axxion_google_plus"
            android:title="@string/axxion_google_plus_title"
            android:summary="@string/axxion_google_plus_summary" />

        <!-- axxion download -->
        <Preference
            android:key="axxion_download"
            android:title="@string/axxion_download_title"
            android:summary="@string/axxion_download_summary" />

        <!-- axxion donate -->
        <Preference
            android:key="axxion_donate"
            android:title="@string/axxion_donate_title"
            android:summary="@string/axxion_donate_summary" />
    </PreferenceCategory>

</PreferenceScreen>
